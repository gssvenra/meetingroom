{
  "type": "object",
  "properties": {
    "date": {
      "type": "date",
      "selector": "#startDate",
      "control": "text",
      "format": "MMM DD, YYYY"
    },
    "time": {
      "type": "time",
      "selector": "#startTime",
      "control": "text",
      "format": "HH:mm"
    },
    "duration": {
      "type": "string",
      "selector": "#duration",
      "control": "select"
    },
    "ishome": {
      "type": "identifier",
      "selector": ".col-sm-12.heading.margintop10",
      "control": "exists"
    },
    "floor": {
      "type": "string",
      "selector": ".form-group",
      "control": "select",
      "frameSelector": [
        null
      ],
      "selectIndex": 2,
      "selectContains": "Floor",
      "selectHidden": true
    }
  },
  "connect": [
    {
      "match": [
        "ishome"
      ],
      "screens": [
        "home"
      ]
    }
  ]
}
